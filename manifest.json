{
    "name": "Oxidized Silver Bird",
    "version": "1",
    "manifest_version": 2,
    "description": "",
    "default_locale": "en",
    "browser_action": {
        "default_icon": "img/icon19.png",
        "default_title": "Oxidized Silver Bird",
        "default_popup": "popup.html?popup"
    },
    "background": {
        "page": "background.html"
    },
    "permissions": [
        "identity",
        "notifications",
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "content_security_policy": "script-src 'self'; object-src 'self'",
    "options_page": "options.html"
}
